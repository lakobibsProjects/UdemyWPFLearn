<Application x:Class="UdemyCalculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UdemyCalculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="GeneralGray" Color="#555555"/>
        <SolidColorBrush x:Key="GeneralWhite" Color="White"/>
        <SolidColorBrush x:Key="IvoryWhite" Color="#FFFFF0"/>

        <Style x:Key="generalButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>
    </Application.Resources>
</Application>
